<%= form_for(@rental) do |f| %>
  <% if @rental.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rental.errors.count, "error") %> prohibited this rental from being finished</h2>

      <ul>
      <% @rental.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>New Rental</h1>

  <div class="field">

    <%= f.label :user_id, :class=>'label' %>
    <div class='select_field'>
      <div class='right'>
        <%= f.collection_select :user_id, User.order(:id), :id, :name, include_blank: false %>
      </div>
    </div>
  </div>

  <div class ="field">

    <%= f.label :car_id, :class=>'label' %>
    <div class="select_field">
      <div class='right'>
        <%= f.collection_select :car_id, Car.order(:id), :id, :model, include_blank: false %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.submit :class=>'submit' %>
  </div>
<% end %>